import random as r
secret_number = r.randint(1, 10)
tries = 0
number_guessed = 0
correct_answer = False
print(secret_number)

while tries < 4 or not correct_answer:
    number_guessed = int(input("Your Guess for Random Number (1-10): "))
    tries = tries + 1
    if number_guessed == secret_number:
        correct_answer = True
        print(correct_answer)

    if not correct_answer:
        print("Wrong Answer")

if correct_answer:
    print("Correct Answer")
if tries > 4:
    print("No more tries")
